int main() {
    int n, sum = 0;

    printf("Enter value n :\n");
    scanf("%d", &n);

    for (int i = 1; i <= n; i++) {
        int number;
        printf("Enter number %d :\n", i);
        scanf("%d", &number);
        sum += number;
    }

    double average = (double)sum / n; // คำนวณค่าเฉลี่ย

    printf("Sum = %d\n", sum);
    printf("Avg = %.2f\n", average); // แสดงค่าเฉลี่ย 2 ตำแหน่ง

    return 0;
}
